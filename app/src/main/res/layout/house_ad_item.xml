<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_8">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/previewImageId"
            android:layout_width="@dimen/image_preview_width"
            android:layout_height="@dimen/image_preview_width"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/agencyTextId"
            android:layout_below="@id/previewImageId"
            android:layout_width="@dimen/image_preview_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_toRightOf="@id/previewImageId"
            android:id="@+id/titleTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_toRightOf="@id/previewImageId"
            android:layout_below="@id/titleTextId"
            android:id="@+id/descriptionTextId"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorPrimary"/>
        <RelativeLayout
            android:layout_below="@id/agencyTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/price_description"/>
            <TextView
                android:id="@+id/priceTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/price_placeholder"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
